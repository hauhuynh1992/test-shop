<?xml version="1.0" encoding="utf-8"?>

<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingPrefix,UnusedAttribute">

        <include layout="@layout/shophop_layout_background" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/sh_spacing_standard_new"
                android:paddingTop="@dimen/sh_spacing_large"
                android:paddingEnd="@dimen/sh_spacing_standard_new"
                android:paddingBottom="@dimen/sh_spacing_large">

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:contentDescription="@string/sh_text_todo"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/sh_spacing_standard"
                    android:src="@drawable/shophop_ic_app_icon" />

                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvAppName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/sh_font_size_xxlarge"
                        android:textAppearance="@style/FontBold"
                        android:textColor="@color/ShopHop_textColorPrimary"
                        android:text="@string/sh_lbl_shop"/>
                    <TextView
                        android:id="@+id/tvSubname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/sh_font_size_xxlarge"
                        android:textAppearance="@style/FontBold"
                        android:textColor="@color/ShopHop_colorPrimary"
                        android:text="@string/sh_lbl_hop"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/sh_spacing_xxlarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtFirstName"
                        style="@style/ShopHopEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sh_spacing_standard"
                        android:layout_marginEnd="@dimen/sh_spacing_standard"
                        android:inputType="textEmailAddress"
                        android:hint="@string/sh_hint_first_name"
                        android:autofillHints="@string/sh_hint_first_name"
                        android:layout_weight="1"
                        android:singleLine="true"
                        />
                    <EditText
                        android:id="@+id/edtLastName"
                        style="@style/ShopHopEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sh_spacing_control"
                        android:layout_marginEnd="@dimen/sh_spacing_standard"
                        android:inputType="textEmailAddress"
                        android:hint="@string/sh_hint_last_name"
                        android:autofillHints="@string/sh_hint_last_name"
                        android:layout_weight="1"
                        android:singleLine="true" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edtEmail"
                    style="@style/ShopHopEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sh_spacing_standard"
                    android:layout_marginTop="@dimen/sh_spacing_standard_new"
                    android:layout_marginEnd="@dimen/sh_spacing_standard"
                    android:inputType="textEmailAddress"
                    android:hint="@string/sh_hint_email"
                    android:autofillHints="@string/sh_hint_email"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edtPassword"
                    style="@style/ShopHopEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sh_spacing_standard"
                    android:layout_marginTop="@dimen/sh_spacing_smlarge"
                    android:layout_marginEnd="@dimen/sh_spacing_standard"
                    android:hint="@string/sh_hint_password"
                    android:autofillHints="@string/sh_hint_password"
                    android:inputType="textPassword"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    style="@style/ShopHopEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sh_spacing_standard"
                    android:layout_marginTop="@dimen/sh_spacing_smlarge"
                    android:layout_marginEnd="@dimen/sh_spacing_standard"
                    android:hint="@string/sh_hint_confirm_password"
                    android:autofillHints="@string/sh_hint_confirm_password"
                    android:inputType="textPassword"
                    android:singleLine="true" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSignUp"
                    style="@style/ShopHopMaterialButtonStyle.Filled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sh_spacing_standard"
                    android:layout_marginTop="@dimen/sh_spacing_mxlarge"
                    android:layout_marginEnd="@dimen/sh_spacing_standard"
                    android:textAppearance="@style/FontMedium"
                    android:text="@string/sh_lbl_sign_up" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSignIn"
                    style="@style/ShopHopMaterialButtonStyle.Stroked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sh_spacing_standard"
                    android:layout_marginTop="@dimen/sh_spacing_standard"
                    android:layout_marginEnd="@dimen/sh_spacing_standard"
                    android:textAppearance="@style/FontMedium"

                    android:text="@string/sh_lbl_sign_in" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sh_spacing_standard_new"
                    android:layout_marginTop="@dimen/sh_spacing_large"
                    android:layout_marginEnd="@dimen/sh_spacing_standard"
                    android:text="@string/sh_lbl_sign_up_with"
                    android:textColor="@color/ShopHop_black"
                    android:visibility="gone"
                    android:textSize="@dimen/sh_font_size_small" />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</layout>

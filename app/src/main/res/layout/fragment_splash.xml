<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_bg"
        android:fitsSystemWindows="true"
        tools:ignore="MissingPrefix">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginStart="@dimen/_minus60sdp"
            android:layout_marginTop="@dimen/_minus60sdp"
            android:background="@drawable/shophop_bg_circle_primary_alpha" />

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_minus60sdp"
            android:layout_marginBottom="@dimen/_minus60sdp"
            android:background="@drawable/shophop_bg_circle_primary_alpha" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4FF5B997" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/sh_spacing_standard_new"
            android:paddingEnd="@dimen/sh_spacing_standard_new"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/sh_splash_img"
                android:layout_height="@dimen/sh_splash_img"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/sh_text_todo"
                android:src="@drawable/shophop_ic_app_icon" />

            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sh_lbl_shop"
                    android:textAppearance="@style/FontBold"
                    android:textColor="@color/ShopHop_textColorPrimary"
                    android:textSize="@dimen/sh_font_size_splash"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sh_lbl_hop"
                    android:textAppearance="@style/FontBold"
                    android:textColor="@color/ShopHop_colorPrimary"
                    android:textSize="@dimen/sh_font_size_splash"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/sh_spacing_middle"
            android:background="@drawable/splash_img" />

    </RelativeLayout>
</layout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ShopHop_background_color"
    android:orientation="vertical"
    tools:context=".activity.ShopHopContactUsActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/llCallRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sh_spacing_standard_new"
        android:orientation="vertical"
        android:paddingStart="@dimen/sh_spacing_standard_new"
        android:paddingEnd="@dimen/sh_spacing_standard_new">

        <TextView
            android:id="@+id/tvCallRequest"
            style="@style/ShopHopHeading"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/shophop_ic_keyboard_arrow_right_black"
            android:text="@string/sh_lbl_call_request" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sh_spacing_control_half"
            android:text="@string/sh_contact_phone"
            android:textColor="@color/ShopHop_textColorSecondary"
            android:textSize="@dimen/sh_font_size_micro" />
    </LinearLayout>

    <View
        style="@style/ShopHopViewLine"
        android:layout_marginTop="@dimen/sh_spacing_control" />

    <LinearLayout
        android:id="@+id/llEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sh_spacing_standard_new"
        android:orientation="vertical"
        android:paddingStart="@dimen/sh_spacing_standard_new"
        android:paddingEnd="@dimen/sh_spacing_standard_new">

        <TextView
            android:id="@+id/tvEmail"
            style="@style/ShopHopHeading"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/shophop_ic_keyboard_arrow_right_black"
            android:text="@string/sh_hint_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sh_spacing_control_half"
            android:text="@string/sh_lbl_contactus_email"
            android:textColor="@color/ShopHop_textColorSecondary"
            android:textSize="@dimen/sh_font_size_micro" />
    </LinearLayout>

    <View
        style="@style/ShopHopViewLine"
        android:layout_marginTop="@dimen/sh_spacing_control" />
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <include layout="@layout/shophop_layout_ads" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/sh_spacing_standard"
    android:layout_marginEnd="@dimen/sh_spacing_standard"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sh_spacing_control_half"
        android:layout_marginTop="@dimen/sh_spacing_control"
        android:padding="@dimen/sh_spacing_medium"
        android:contentDescription="@string/sh_text_todo"
        android:src="@drawable/shophop_ic_keyboard_backspace"
        app:tint="@color/ShopHop_textColorPrimary" />

    <TextView
        android:textAppearance="@style/FontBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sh_spacing_standard_new"
        android:text="@string/sh_lbl_enter_the_code_nto_verify_email"
        android:textColor="@color/ShopHop_textColorPrimary"
        android:textSize="@dimen/sh_font_size_xxlarge"
        android:textStyle="bold" />

    <include layout="@layout/shophop_layout_otp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        android:layout_gravity="center_horizontal"
        style="@style/ShopHopMaterialButtonStyle.Filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sh_spacing_standard_new"
        android:paddingEnd="@dimen/sh_spacing_standard_new"
        android:layout_marginTop="@dimen/sh_spacing_standard"
        android:text="@string/sh_lbl_verify" />
</LinearLayout>
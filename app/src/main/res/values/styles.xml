<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ShopHopAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ShopHop_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ShopHop_colorPrimaryDark</item>
        <item name="colorAccent">@color/ShopHop_colorAccent</item>
        <item name="drawerArrowStyle">@style/ShopHopDrawerArrowStyle</item>
        <item name="titleTextColor">@color/ShopHop_textColorPrimary</item>
        <!--        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>-->
        <item name="searchViewStyle">@style/ShopHopAppTheme.SearchView</item>
    </style>

    <style name="ShopHopAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/ShopHop_textColorPrimary</item>
        <item name="android:textColorSecondary">@color/ShopHop_textColorSecondary</item>
        <item name="android:textColorHint">@color/ShopHop_textColorSecondary
        </item>


    </style>

    <style name="ShopHopAppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>


    <style name="ShopHopAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShopHopEditTextStyle">
        <item name="android:paddingStart">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:textSize">@dimen/sh_font_size_medium</item>
        <item name="android:background">@drawable/shophop_bg_ractangle_rounded_inactive</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ShopHopMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sh_font_size_normal</item>
        <item name="android:paddingTop">@dimen/sh_spacing_standard</item>
        <item name="android:paddingBottom">@dimen/sh_spacing_standard</item>
        <item name="android:paddingStart">@dimen/sh_spacing_standard</item>
        <item name="android:paddingEnd">@dimen/sh_spacing_standard</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="cornerRadius">@dimen/sh_spacing_xlarge</item>
        <!--        <item name="fontPath">@string/sh_font_semi_bold</item>-->
    </style>

    <style name="ShopHopMaterialButtonStyle.Filled">
        <item name="backgroundTint">@color/ShopHop_colorPrimary</item>
        <item name="android:textColor">@color/ShopHop_white</item>
        <item name="rippleColor">@color/ShopHop_white</item>
    </style>

    <style name="ShopHopMaterialButtonStyle.Stroked">
        <item name="backgroundTint">@color/ShopHop_white</item>
        <item name="strokeColor">@color/ShopHop_colorAccent</item>
        <item name="strokeWidth">@dimen/sh_stroke_width</item>
        <item name="android:textColor">@color/ShopHop_colorPrimary</item>
    </style>

    <style name="ShopHopTabNotSelected">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:padding">@dimen/sh_spacing_standard</item>
    </style>

    <style name="ShopHopCatIcon">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:background">@drawable/shophop_bg_circle_primary_light</item>
        <item name="android:padding">@dimen/sh_spacing_standard</item>
    </style>

    <style name="ShopHopDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/ShopHop_black</item>
        <item name="icon">@drawable/shophop_ic_profile</item>
    </style>

    <style name="ShopHopCatText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sh_font_size_small</item>
        <item name="fontPath">@string/sh_font_semi_bold</item>
    </style>

    <style name="ShopHopHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:textSize">@dimen/sh_font_size_medium</item>
        <item name="fontPath">@string/sh_font_semi_bold</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ShopHopSidebarLabel.ShopHopSidebarOption">
        <item name="android:drawablePadding">@dimen/sh_spacing_standard</item>
        <item name="android:paddingTop">@dimen/sh_spacing_middle</item>
        <item name="android:paddingBottom">@dimen/sh_spacing_middle</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_26sdp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ShopHopSidebarLabel">
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:textSize">@dimen/sh_font_size_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">@string/sh_font_semi_bold</item>

    </style>

    <style name="ShopHopAccountLabel">
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:textSize">@dimen/sh_font_size_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">@string/sh_font_semi_bold</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawablePadding">@dimen/sh_spacing_standard</item>
        <item name="android:padding">@dimen/sh_spacing_standard</item>
        <item name="android:drawableEnd">@drawable/shophop_ic_keyboard_arrow_right_black</item>
        <item name="android:layout_marginStart">@dimen/sh_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/sh_spacing_standard_new</item>
        <item name="android:layout_marginTop">@dimen/sh_spacing_middle</item>
        <item name="android:background">@drawable/shophop_bg_ractangal_stroked</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ShopHopRecycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="ShopHopRatingText">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawableEnd">@drawable/shophop_ic_star_black</item>
        <item name="android:drawablePadding">@dimen/sh_spacing_control</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/ShopHop_yellow</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:textSize">@dimen/sh_font_size_small</item>
        <item name="fontPath">@string/sh_font_medium</item>
    </style>

    <style name="ShopHopRatingSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_6sdp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:enabled">false</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="ShopHopRatingSubText">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sh_font_size_small</item>
    </style>

    <style name="ShopHopMoreInfoHeading">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="fontPath">@string/sh_font_semi_bold</item>
        <item name="android:padding">@dimen/sh_spacing_medium</item>
        <item name="android:background">@color/ShopHop_more_infoHeading_background</item>
    </style>

    <style name="ShopHopMoreInfoSubHeading">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="fontPath">@string/sh_font_semi_bold</item>
        <item name="android:padding">@dimen/sh_spacing_medium</item>
        <item name="android:paddingStart">@dimen/sh_spacing_mxlarge</item>
        <item name="android:background">@color/ShopHop_more_infoValue_background</item>
        <item name="android:singleLine">true</item>
        <item name="android:lineSpacingExtra">@dimen/sh_spacing_control_half</item>
    </style>

    <style name="ShopHopCategoryStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/sh_spacing_standard_new</item>
        <item name="android:paddingEnd">@dimen/sh_spacing_standard_new</item>
        <item name="android:paddingTop">@dimen/sh_spacing_medium</item>
        <item name="android:paddingBottom">@dimen/sh_spacing_medium</item>
        <item name="android:textSize">@dimen/sh_font_size_small</item>
        <item name="fontPath">@string/sh_font_medium</item>
        <item name="android:background">@drawable/shophop_bg_ractangle_rounded</item>
    </style>

    <style name="ShopHopOrderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sh_spacing_control</item>
        <item name="android:textColor">@color/ShopHop_textColorSecondary</item>
        <item name="android:textSize">@dimen/sh_font_size_small</item>
        <item name="fontPath">@string/sh_font_medium</item>
    </style>

    <style name="ShopHopRatingBar" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/ShopHop_dots_color</item>
        <item name="colorControlActivated">@color/ShopHop_yellow</item>
    </style>

    <style name="ShopHopPaymentOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sh_spacing_standard</item>
        <item name="android:layout_marginStart">@dimen/sh_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/sh_spacing_standard_new</item>
        <item name="android:layout_marginBottom">@dimen/sh_spacing_middle</item>
        <item name="android:textSize">@dimen/sh_font_size_medium</item>
        <item name="fontPath">@string/sh_font_semi_bold</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:background">@drawable/shophop_bg_rectangle_order</item>
        <item name="android:drawablePadding">@dimen/sh_spacing_standard</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ShopHopBottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sh_font_size_small</item>
        <item name="fontPath">@string/sh_font_semi_bold</item>
    </style>

    <style name="ShopHopBottomButton.White">
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
    </style>

    <style name="ShopHopBottomButton.Primary">
        <item name="android:textColor">@color/ShopHop_white</item>
        <item name="android:background">@color/ShopHop_colorPrimary</item>
    </style>

    <style name="ShopHopTextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/ShopHop_textColorSecondary</item>
        <item name="android:layout_marginStart">@dimen/sh_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/sh_spacing_standard_new</item>
        <item name="android:layout_marginTop">@dimen/sh_spacing_middle</item>
    </style>

    <style name="ShopHopTextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:textSize">@dimen/sh_font_size_medium</item>
        <item name="android:layout_marginTop">@dimen/sh_spacing_control_half</item>
        <item name="android:singleLine">true</item>
        <item name="fontPath">@string/sh_font_medium</item>

    </style>

    <style name="ShopHopOfferBanner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_110sdp</item>
        <item name="android:layout_marginStart">@dimen/sh_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/sh_spacing_standard_new</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ShopHopCartButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:drawablePadding">@dimen/sh_spacing_control</item>
        <item name="android:textSize">@dimen/sh_font_size_micro</item>
    </style>

    <style name="ShopHopTabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontPath">@string/sh_font_medium</item>
    </style>

    <style name="ShopHopCollapsingTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ShopHop_white</item>
        <item name="colorPrimaryDark">@color/ShopHop_white</item>
        <item name="colorAccent">@color/ShopHop_colorAccent</item>
    </style>

    <style name="FontMedium">
        <item name="fontPath">@string/sh_font_medium</item>
    </style>

    <style name="FontSemiBold">
        <item name="fontPath">@string/sh_font_semi_bold</item>
    </style>

    <style name="FontBold">
        <item name="fontPath">@string/sh_font_bold</item>
    </style>

    <style name="ShopHopCollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/sh_font_size_normal</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
    </style>

    <style name="ShopHopAppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/shophop_ic_search</item>
        <item name="closeIcon">@drawable/shophop_ic_close_black</item>
        <item name="queryBackground">@null</item>
    </style>

    <style name="ShoHopFieldRounded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shophop_bg_ractangle_rounded_stroke</item>
        <item name="android:textColor">@color/ShopHop_textColorPrimary</item>
        <item name="android:textSize">@dimen/sh_font_size_medium</item>
        <item name="android:padding">@dimen/sh_spacing_middle</item>
        <item name="android:layout_marginStart">@dimen/sh_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/sh_spacing_standard_new</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ShopHopViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:layout_marginStart">@dimen/sh_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/sh_spacing_standard_new</item>
        <item name="android:background">@color/ShopHop_view_color</item>
    </style>

    <style name="ShopHopSwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:colorControlActivated">@color/ShopHop_colorPrimary</item>
    </style>

    <style name="ShopHopEditTextTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorControlNormal">@color/ShopHop_textColorSecondary</item>
        <item name="colorControlActivated">@color/ShopHop_colorPrimary</item>
        <item name="colorControlHighlight">@color/ShopHop_colorPrimary</item>
    </style>

    <style name="ShopHopCardNumberEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shophop_bg_rounded_border_edittext</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:maxLength">4</item>
        <item name="android:padding">@dimen/sh_spacing_medium</item>
        <item name="android:textColor">@color/ShopHop_textColorSecondary</item>
        <item name="android:textSize">@dimen/sh_font_size_normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ShopHopCountdown">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ShopHop_textColorSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sh_font_size_normal</item>
        <item name="fontPath">@string/sh_font_medium</item>

    </style>

</resources>
